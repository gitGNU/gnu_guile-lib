
ifndef texi-files
texi-files	:= $(wildcard $(srcdir)/*.texi)
endif

theinfo := guile-library.info
info-install-dir := $(destdir)$(prefix)/share/info

all: $(theinfo)

install: install-doc-info
clean: clean-doc-info

install-doc-info:
	cp $(theinfo) $(info-install-dir)

clean-doc-info:
	rm -rf $(theinfo)

%.info: %.texi
	makeinfo --force -I $(srcdir) -o $@ $<

